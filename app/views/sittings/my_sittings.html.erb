<head><link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet"></head>

<p id="notice"><%= notice %></p>

<h1 class="text-center" style="color:#6396e8; font-family:Ubuntu;">My Sittings</h1>


<div class="text-center">
<table align="center" style="color:#6396e8; width:80%">
  <thead>
    <tr>
      
      <th>Start Time</th>
      <th>Stop Time</th>
      <th>Duration</th>
      <th>Number Of Kids</th>
      <th>Billed Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_sittings.each do |my_sitting| %>
      <tr>
        <td><%= my_sitting.start_time %></td>
        <td><%= my_sitting.stop_time %></td>
        <td><%= (my_sitting.stop_time - my_sitting.start_time)/3600 %></td>
        <td><%= my_sitting.number_of_kids %></td>
        <td><%=  ((my_sitting.stop_time - my_sitting.start_time)/3600) * my_sitting.number_of_kids * 10 %></td>
        <td><%= link_to 'Sitting Details', my_sitting, {style: "color: #6396e8"} %></td>
        <td><%= link_to 'Edit Sitting', edit_sitting_path(my_sitting), {style: "color: #6396e8"} %></td>
        <!-- <td><%= link_to 'Delete Sitting', my_sitting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> -->
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sitting', new_sitting_path, {style: "color: #6396e8"} %>

</div>
